<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FCFDFC"
    android:weightSum="5"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2"



        >

        <TextView
            android:background="#B2DFDB"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Today's Date"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:gravity="center"


            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="2-6-2016"
                android:padding="8dp"
                android:textStyle="bold"
                android:textSize="25dp"
                android:id="@+id/todayinfoid"


                />
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/calender"
                android:background="#FCFDFC"
                android:onClick="picker"
                android:id="@+id/todaycalenderid"


                />



        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2"



        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Birthday Date"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textAlignment="center"
            android:gravity="center"
            android:background="#B2DFDB"


            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="2-6-2018"
                android:padding="8dp"
                android:textStyle="bold"
                android:textSize="25dp"
                android:id="@+id/birthdayinfoid"


                />
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/calender"
                android:background="#FCFDFC"
                android:onClick="picker"
                android:id="@+id/birthdaycalenderid"


                />



        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2"
        android:gravity="center"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Calculate"
            android:background="#00796B"
            android:layout_margin="5dp"
            android:onClick="picker"
            android:id="@+id/calculateid"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Clear"
            android:background="#00796B"
            android:layout_margin="5dp"
            android:onClick="picker"
            android:id="@+id/clearid"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2"
        android:weightSum="3"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Displayed Age (YY-MM-DD)"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"
            android:gravity="center"
            android:background="#B2DFDB"


            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:weightSum="3"
            android:gravity="center"

            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Year"
                android:textSize="25dp"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:id="@+id/yearid"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Month"
                android:textSize="25dp"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:id="@+id/monthid"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Days"
                android:textSize="25dp"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:id="@+id/dateid"
                />




        </LinearLayout>




    </LinearLayout>


</LinearLayout>





